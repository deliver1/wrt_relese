# ==========================================
# 1. 机型锁定：Redmi AX6 (修复变阿里云的问题)
# ==========================================
CONFIG_TARGET_qualcommax=y
CONFIG_TARGET_qualcommax_ipq807x=y
CONFIG_TARGET_DEVICE_qualcommax_ipq807x_DEVICE_redmi_ax6=y
CONFIG_ATH11K_MEM_PROFILE_512M=y
CONFIG_TARGET_PER_DEVICE_ROOTFS=y

# ❌ 显式禁用阿里云和 Stock 版本 (防止冲突)
# CONFIG_TARGET_DEVICE_qualcommax_ipq807x_DEVICE_aliyun_ap8220 is not set
# CONFIG_TARGET_DEVICE_qualcommax_ipq807x_DEVICE_redmi_ax6-stock is not set

# 编译优化
CONFIG_DEVEL=y
CONFIG_CCACHE=y
CONFIG_BUSYBOX_CUSTOM=y
CONFIG_BUSYBOX_CONFIG_TELNET=y

# ==========================================
# 2. NSS 硬件加速 (满血版)
# ==========================================
# 开启 NSS 固件 11.4
CONFIG_NSS_FIRMWARE_VERSION_11_4=y
# 开启 NSS 核心驱动 (自动包含 PPPoE/L2TP 等加速)
CONFIG_PACKAGE_kmod-qca-nss-drv=y
CONFIG_PACKAGE_kmod-qca-nss-ecm=y
CONFIG_PACKAGE_kmod-qca-nss-sfe=y
# 开启 NSS 版 SQM (流控)
CONFIG_PACKAGE_sqm-scripts-nss=y
CONFIG_PACKAGE_luci-app-sqm=y

# ==========================================
# 3. 科学上网：Nikki (Mihomo)
# ==========================================
CONFIG_PACKAGE_luci-app-nikki=y
CONFIG_PACKAGE_mihomo=y
# 必备：压缩库 (防止订阅更新失败)
CONFIG_PACKAGE_kmod-lib-zlib=y
CONFIG_PACKAGE_kmod-lib-lz4=y

# ==========================================
# 4. 基础网络 (IPv6 + UPnP)
# ==========================================
CONFIG_IPV6=y
CONFIG_PACKAGE_ipv6helper=y
CONFIG_PACKAGE_dnsmasq_full_dhcpv6=y

# UPnP (游戏/BT必备)
CONFIG_PACKAGE_luci-app-upnp=y

# 基础工具 (CPU温度/终端/HTOP)
CONFIG_PACKAGE_luci-app-cpufreq=y
CONFIG_PACKAGE_luci-app-ttyd=y
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_default-settings-chn=y

# ==========================================
# 5. 垃圾清理 (严格执行你的精简需求)
# ==========================================
# 禁用 商店/Docker/文件共享
# CONFIG_PACKAGE_luci-app-istorex is not set
# CONFIG_PACKAGE_luci-app-store is not set
# CONFIG_PACKAGE_luci-app-samba4 is not set

# 禁用 组网/穿透 (你列表里的 EasyTier/Lucky/FRP)
# CONFIG_PACKAGE_luci-app-easytier is not set
# CONFIG_PACKAGE_luci-app-lucky is not set
# CONFIG_PACKAGE_luci-app-frpc is not set

# 禁用 DNS 和应用过滤 (防止与 Nikki 冲突)
# CONFIG_PACKAGE_luci-app-mosdns is not set
# CONFIG_PACKAGE_luci-app-smartdns is not set
# CONFIG_PACKAGE_luci-app-oaf is not set

# 禁用 其他杂项 (KMS/WOL/自动重启)
# CONFIG_PACKAGE_luci-app-vlmcsd is not set
# CONFIG_PACKAGE_luci-app-wol is not set
# CONFIG_PACKAGE_luci-app-autoreboot is not set
