# NSS（保留有线加速 + SQM + 高性能）
CONFIG_IPQ_MEM_PROFILE_256=y                  # 固定 IPQ807x 256MB profile
CONFIG_NSS_MEM_PROFILE_HIGH=y                 # 高性能 NSS 模式
CONFIG_NSS_FIRMWARE_VERSION_11_4=y            # 固件版本 11.4
CONFIG_PACKAGE_sqm-scripts-nss=y              # 带 NSS 加速的 SQM
CONFIG_PACKAGE_kmod-qca-mcs=y                 # 多核调度支持
CONFIG_KERNEL_SKB_RECYCLER=y                  # skb 回收，提高 PPS
CONFIG_KERNEL_SKB_RECYCLER_MULTI_CPU=y        # 多核版本，性能更高

# ❌ 禁用所有 WiFi/Mesh
CONFIG_ATH11K_MEM_PROFILE_512M=n
CONFIG_PACKAGE_kmod-ath11k-pci=n
CONFIG_PACKAGE_kmod-ath11k=n
CONFIG_PACKAGE_kmod-ath11k-ahb=n
CONFIG_PACKAGE_kmod-mac80211=n
CONFIG_PACKAGE_wireless-regdb=n
CONFIG_PACKAGE_hostapd-common=n
CONFIG_PACKAGE_wpad-basic=n
CONFIG_PACKAGE_wpad-openssl=n
CONFIG_PACKAGE_MAC80211_MESH=n
CONFIG_NSS_DRV_WIFI_MESH_ENABLE=n
CONFIG_ATH11K_NSS_MESH_SUPPORT=n
